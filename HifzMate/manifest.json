{
  "manifest_version": 3,
  "name": "HifzMate",
  "version": "1.0.0",
  "description": "An assistant tool for Quran memorization",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content/content.js"]
    }
  ],
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
